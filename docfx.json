{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "Nodify/Nodify.csproj"
          ]
        }
      ],
      "dest": "api",
      "filter": "filterConfig.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": ["**/*.{md,yml}"],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "markdownEngineName": "markdig",
    "markdownEngineProperties": {
      "markdigExtensions": [
          "Abbreviations",
          "Footnotes"
      ]
    },
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "globalMetadata": {
      "_appName": "Nodify-Docs",
      "_appTitle": "Nodify-Docs",
      "_enableSearch": true
    },
    "experimental": {
      "generateMarkdown": true
    }
  }
}